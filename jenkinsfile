pipeline {
    agent any

    environment {
        // Definir las variables de entorno necesarias
        FLASK_ENV = 'testing'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    sh 'pip install -r requirements.txt'
                }
            }
        }

        stage('Run Tests') {
            steps {
                // Ejecutar tus pruebas de Python
                script {
                    sh 'python -m unittest discover tests'
				}
            }
        }
    }

    post {
        always {
            echo 'Se han ejecutado las pruebas'
        }
        success {
            echo 'Todo ha ido como esperábamos'
        }
        failure {
            echo 'Algo ha ido mal, revise su código'
        }
    }
}
